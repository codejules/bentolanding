---
import Section from "@/layouts/Section.astro";
---

<Section>
    <div class="bg-white/30 rounded-xl my-20 p-2">
        <div
            class="grid grid-areas-layout md:grid-areas-layout-md lg:grid-areas-layout-lg grid-cols-[1fr] md:grid-cols-[200px_1fr] lg:grid-cols-[250px_1fr] grid-rows-[auto] gap-4"
        >
            <div class="">
                <aside
                    class="flex flex-col gap-6 sidebar bg-white/60 rounded-xl px-1 py-4"
                >
                    <ul
                        data-tabs-active-classes="bg-white rounded-lg text-purple-600 hover:text-purple-600 font-semibold"
                        id="default-styled-tab"
                        data-tabs-toggle="#default-styled-tab-content"
                        role="tablist"
                        class="flex flex-col gap-6 font-thin text-sm"
                    >
                        <li
                            role="presentation"
                            class="hover:bg-white rounded-lg cursor-pointer"
                        >
                            <button
                                class="w-full text-left p-2"
                                id="profile-styled-tab"
                                data-tabs-target="#styled-profile"
                                type="button"
                                role="tab"
                                aria-controls="profile"
                                aria-selected="true"
                            >
                                Dashboard
                            </button>
                        </li>
                        <li
                            role="presentation"
                            class="hover:bg-white rounded-lg cursor-pointer"
                        >
                            <button
                                class="w-full text-left p-2"
                                id="dashboard-styled-tab"
                                data-tabs-target="#styled-dashboard"
                                type="button"
                                role="tab"
                                aria-controls="dashboard"
                                aria-selected="false"
                            >
                                All reports
                            </button>
                        </li>
                        <li
                            role="presentation"
                            class="hover:bg-white p-2 rounded-lg cursor-pointer"
                        >
                            <button> Geography </button>
                        </li>
                        <li
                            role="presentation"
                            class="hover:bg-white p-2 rounded-lg cursor-pointer"
                        >
                            <button> Conversations </button>
                        </li>
                        <li
                            role="presentation"
                            class="hover:bg-white p-2 rounded-lg cursor-pointer"
                        >
                            <button> Deals </button>
                        </li>
                        <li
                            role="presentation"
                            class="hover:bg-white p-2 rounded-lg cursor-pointer"
                        >
                            <button> Export </button>
                        </li>
                    </ul>
                </aside>
            </div>
            <div class="">
                <main class="main">
                    <div id="default-styled-tab-content">
                        <div
                            class="flex flex-col gap-2 hidden"
                            id="styled-profile"
                            role="tabpanel"
                            aria-labelledby="profile-tab"
                        >
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-2">
                                <article
                                    class="bg-white/60 justify-between rounded-xl p-6 gap-5 flex flex-col"
                                >
                                    <h3 class="text-xl font-extrabold">
                                        Revenues
                                    </h3>
                                    <p class="text-4xl">15%</p>
                                    <p class="text-[10px]">
                                        Compared to last week
                                    </p>
                                    <p class="text-xs">Revenues report →</p>
                                </article>
                                <article
                                    class="bg-white/60 justify-between rounded-xl p-6 gap-5 flex flex-col"
                                >
                                    <h3 class="text-xl font-extrabold">
                                        Lost deals
                                    </h3>
                                    <p class="text-4xl">3.75%</p>
                                    <p class="text-[10px]">
                                        You closed 97 out of 100 deals
                                    </p>
                                    <p class="text-xs">All deals →</p>
                                </article>
                                <article
                                    class="bg-white/60 justify-between rounded-xl p-6 gap-5 flex flex-col"
                                >
                                    <h3 class="text-xl font-extrabold">
                                        Q3 2025 goal
                                    </h3>
                                    <p class="text-4xl">84%</p>
                                    <p class="text-xs">All goals →</p>
                                </article>
                            </div>
                            <div class="grid grid-cols-2 gap-2">
                                <article
                                    class="bg-white/60 justify-between rounded-xl p-6 gap-5 flex flex-col"
                                >
                                    <h3 class="text-xl font-extrabold">
                                        Customers
                                    </h3>
                                    <p class="text-4xl">-5%</p>
                                    <p class="text-[10px]">
                                        Compared to last week
                                    </p>
                                    <p class="text-xs">Revenues report →</p>
                                </article>
                                <article
                                    class="bg-white/60 justify-between rounded-xl p-6 gap-5 flex flex-col"
                                >
                                    <h3 class="text-xl font-extrabold">
                                        Lost deals
                                    </h3>
                                    <p class="text-4xl">3.75%</p>
                                    <p class="text-[10px]">
                                        You closed 97 out of 100 deals
                                    </p>
                                    <p class="text-xs">All deals →</p>
                                </article>
                            </div>
                        </div>
                        <div
                            class="flex flex-col gap-2 hidden"
                            id="styled-dashboard"
                            role="tabpanel"
                            aria-labelledby="dashboard-tab"
                        >
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-2">
                                <article
                                    class="bg-white/60 justify-between rounded-xl p-6 gap-5 flex flex-col"
                                >
                                    <h3 class="text-xl font-extrabold">
                                        Report 1
                                    </h3>
                                    <p class="text-4xl">15%</p>
                                    <p class="text-[10px]">
                                        Compared to last week
                                    </p>
                                    <p class="text-xs">Revenues report →</p>
                                </article>
                                <article
                                    class="bg-white/60 justify-between rounded-xl p-6 gap-5 flex flex-col"
                                >
                                    <h3 class="text-xl font-extrabold">
                                        Report 2
                                    </h3>
                                    <p class="text-4xl">3.75%</p>
                                    <p class="text-[10px]">
                                        You closed 97 out of 100 deals
                                    </p>
                                    <p class="text-xs">All deals →</p>
                                </article>
                                <article
                                    class="bg-white/60 justify-between rounded-xl p-6 gap-5 flex flex-col"
                                >
                                    <h3 class="text-xl font-extrabold">
                                        Q3 2025 goal
                                    </h3>
                                    <p class="text-4xl">84%</p>
                                    <p class="text-xs">All goals →</p>
                                </article>
                            </div>
                            <div class="grid grid-cols-2 gap-2">
                                <article
                                    class="bg-white/60 justify-between rounded-xl p-6 gap-5 flex flex-col"
                                >
                                    <h3 class="text-xl font-extrabold">
                                        Customers
                                    </h3>
                                    <p class="text-4xl">-5%</p>
                                    <p class="text-[10px]">
                                        Compared to last week
                                    </p>
                                    <p class="text-xs">Revenues report →</p>
                                </article>
                                <article
                                    class="bg-white/60 justify-between rounded-xl p-6 gap-5 flex flex-col"
                                >
                                    <h3 class="text-xl font-extrabold">
                                        Lost deals
                                    </h3>
                                    <p class="text-4xl">3.75%</p>
                                    <p class="text-[10px]">
                                        You closed 97 out of 100 deals
                                    </p>
                                    <p class="text-xs">All deals →</p>
                                </article>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>
</Section>
